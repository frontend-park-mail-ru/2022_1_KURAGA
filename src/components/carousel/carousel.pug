mixin carousel(items,car,prevBtn,nextBtn,wrapMov,typeMov,num,title)
        div.select-title= title
        div.wrap
            div.b-carousel(class = car)
                button(class=`b-carousel`+`${typeMov}`+`__prev ${prevBtn}`) ❬
                button(class=`b-carousel`+`${typeMov}`+`__next ${nextBtn}`) ❭
                div(class=`b-carousel`+`${typeMov}`+`__wrap ${wrapMov}`, style="transform: translateX(0%);")
                    each _ in Array(num)
                        div.b-carousel__item
                            each item in items
                                div(class=`movie`+`${typeMov}`)(style=`background: url(../../../static/`+item.picture+`);background-size: contain;`)
                                    a(href=`/movie/${item.id}`)
                                        div.ref-mov
                                    div(class=`desc-mov`+`${typeMov}`)
                                        div= item.name
                                        div.genre= item.genre
                                        input#cb.input-like(type = "checkbox")


+ carousel(items,car,prevBtn,nextBtn,wrapMov,typeMov,num,title)