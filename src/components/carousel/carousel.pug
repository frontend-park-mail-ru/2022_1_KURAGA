mixin carousel(items,car,prevBtn,nextBtn,wrapMov,typeMov,countDiv,num,title)
    div.select-title= title
    div.wrap
        div(class = car + ` b-carousel`+ `${typeMov}`)
            button(class=`b-carousel` + `${typeMov}` + `__prev ${prevBtn}`) ❬
            button(class=`b-carousel` + `${typeMov}` + `__next ${nextBtn}`) ❭
            div(class=`b-carousel` + `${typeMov}` + `__wrap ${wrapMov}`, style="transform: translateX(0%);")
                - for (var i = 0 ;i < countDiv; ++i)
                    div.b-carousel__item
                        each item,index in items
                            if(index >= i*num && index < (i+1)*num )
                                div(class=`movie`+`${typeMov}`, style=`background-image: url(\"${item.picture}\");`)
                                    a(href=`/movie/${item.id}`)
                                        div.ref-mov
                                        div(class=`desc-mov` + `${typeMov}`)
                                            .movie__href= item.name
                                            if (item.genre.length > 1)
                                                div.genre= item.genre[0] + "/" + item.genre[1]
                                            else
                                                div.genre= item.genre
                                            input#cb.input-like(type = "checkbox")

+ carousel(items,car,prevBtn,nextBtn,wrapMov,typeMov,countDiv,num,title)