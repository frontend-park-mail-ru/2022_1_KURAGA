div.group Съемочная группа
div.group__staff
    each staff in staffs
        div.group__person
            a.person__href(href=`/person/${staff.id}`)
                div.person__photo(style=`background-image: url(\"${staff.photo}\");`)
                div.person__name #{staff.name}
                div.person__position #{staff.position}
